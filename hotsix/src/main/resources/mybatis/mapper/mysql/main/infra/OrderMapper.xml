<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotsix.infra.order.OrderDao">
<resultMap id="resultMapObj" type="com.hotsix.infra.order.OrderDto"></resultMap>
	
	<sql id ="selectCommon">
      from
		orderProduct b
	left join product c
		on c.productSeq = b.productSeqF
	left join member d
		on d.memberSeq = b.orderSeqF
<!--         <if test="shUseNy != null and !shUseNy.equals('')">AND ifcgUseNy = #{shUseNy}</if> -->
        <if test="shDelny != null and !shDelny.equals('')">AND b.orderProductDelNy = #{shDelny}</if>
       
				<choose>
					<when test="shOptionDate == 1">AND b.orderProductRegDate BETWEEN #{shDateStart} AND #{shDateEnd}</when>
					<when test="shOptionDate == 2">AND b.orderProductModDate BETWEEN #{shDateStart} AND #{shDateEnd}</when>
				</choose>
    
        <choose>
            <when test="shOption == 1">AND a.codeGroupSeqF = #{shValue}</when>
            <when test="shOption == 2">AND a.codedSeq = #{shValue}</when>
            <when test="shOption == 3">AND a.codeName LIKE CONCAT('%',#{shValue},'%')</when>
            
            
<!--             <when test="shOption == 3">AND ifcgNameEng LIKE CONCAT('%',#{shValue},'%')</when> -->
        </choose>
       </sql>
	
	
	
	<select id="selectList" resultMap="resultMapObj">
	 select
        b.orderProductSeq
		,d.memberName
		,d.memberTypeCd
		,c.productName
		,c.productPrice
		,c.productTypeCd
		,b.orderAccount
	  <include refid="selectCommon" />         
      limit #{rowNumToShow} offset #{startRnumForMysql}
	</select>
	
	
	
	<select id="selectOne" resultMap="resultMapObj">
	
	</select>
	
	<select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon" />
	</select>
	
	
	<insert id="insert">
		insert into orderProduct(
			orderAccount
			,productSeqF
			,orderSeqF
		)values(
			#{orderAccount}
			,#{productSeqF}
			,#{memberSeqF}
		)
	</insert>
	
	<insert id="orderInsert">
		insert into orders(
			memberSeqF
		)values(
			#{memberSeqF}
		)
	</insert>
	
	
	<update id="update">
		
	</update>
	
	<update id="uelete">
		
	</update>
	
	<delete id="delete">
		
	</delete>	
	

</mapper>